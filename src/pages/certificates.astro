---
import CertificateCard from '../components/CertificateCard.astro'
import Layout from '../layouts/Layout.astro'
import { AllCertificates } from '../scripts/constants.js'
---

<Layout title='Portfolio - Certificates'>
  <section class='min-h-screen w-full py-10 px-4 md:px-8 flex justify-center'>
    <article class='h-full max-w-[1100px] space-y-10'>
      <div class='w-full flex justify-between items-end'>
        <h2 class='font-bold text-4xl'>Certificates</h2>
        <a
          href='/'
          class='h-full text-2xl uppercase tracking-widest font-bold border-green border-b-2 hover:text-green'
        >
          Go back
        </a>
      </div>
      {
        AllCertificates.map((item) => (
          <CertificateCard title={item.title} images={item.images} />
        ))
      }
    </article>
  </section>
</Layout>

---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Card from '../components/Card.astro'
import Footer from '../components/Footer.astro'

import { projects, skills } from '../scripts/constants'
---

<Layout title='Porfolio'>
  <Header />

  <main
    class='py-20 grid gap-20 px-4 overflow-hidden md:px-8 place-content-center'
  >
    <section
      class='flex flex-col gap-10 py-10 border-y relative text-center md:text-left'
    >
      <h2 class='font-bold text-4xl'>My Skills:</h2>
      <div class='grid gap-10 md:grid-cols-2'>
        {skills.map((skill) => <p class='font-bold text-3xl'>{skill}</p>)}
      </div>
      <!-- Background ring -->
      <div class='absolute -right-96 bottom-0 z-0'>
        <img src='/assets/pattern-rings.svg' role='none' />
      </div>
    </section>

    <section class='grid gap-10'>
      <header class='w-full flex justify-between h-10 items-center'>
        <h2 class='font-bold text-4xl'>Projects</h2>
        <a
          href='#'
          class='h-full text-xl uppercase tracking-widest font-medium border-green border-b-2'
        >
          Contact me
        </a>
      </header>
      <div class='w-full grid gap-16 md:grid-cols-2 md:place-content-between'>
        {projects.map((project) => <Card project={project} />)}
      </div>
    </section>
  </main>

  <footer class='bg-darkGray px-4 py-14 md:px-8'>
    <Footer />
  </footer>
</Layout>

---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Card from '../components/Card.astro'
import Footer from '../components/Footer.astro'

import { projects, skills } from '../scripts/constants'
---

<Layout title='Porfolio'>
  </style>
  <header
    class='min-w-full relative overflow-hidden flex justify-center px-4 md:px-8'
  >
    <Header />
  </header>

  <main
    class='py-20 grid gap-20 px-4 overflow-hidden md:px-8 place-content-center place-items-center'
  >
    <section
      class='w-full max-w-[1100px] flex flex-col gap-10 py-10 border-y relative text-center md:text-left'
    >
      <div class='w-full flex justify-between items-end'>
        <h2 class='font-bold text-3xl md:text-4xl'>My Skills:</h2>
        <a
          href='/certificates'
          class='h-full text-xl uppercase tracking-widest font-bold border-green border-b-2 hover:text-green'
        >
          My certificates
        </a>
      </div>
      <div class='grid gap-5 md:grid-cols-2'>
        {skills.map((skill) => <p class='font-bold text-3xl uppercase' data-value={skill} data-type='skill'>{skill}</p>)}
      </div>
      <!-- Background ring -->
      <div class='absolute -right-96 bottom-0 z-0'>
        <img src='/assets/pattern-rings.svg' role='none' />
      </div>
    </section>

    <section class='grid gap-10 w-full max-w-[1100px]'>
      <header class='w-full flex justify-between h-10 items-center'>
        <h2 class='font-bold text-4xl'>Projects</h2>
        <a
          href='#contact'
          class='h-full text-xl uppercase tracking-widest font-medium border-green border-b-2 hover:text-green'
        >
          Contact me
        </a>
      </header>
      <div class='w-full grid gap-16 md:grid-cols-2 md:place-content-between'>
        {projects.map((project) => <Card project={project} />)}
      </div>
    </section>
  </main>

  <footer
    class='bg-darkGray px-4 py-14 md:px-8 flex justify-center lg:pb-0'
    id='contact'
  >
    <Footer />
  </footer>
</Layout>
<script src='../scripts/email.js'></script>
